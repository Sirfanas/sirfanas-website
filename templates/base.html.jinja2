<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Import bootstrap css, then bootstrap icons and bootstrap js -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

        <!-- Import JQuery (minfied to improve performance) -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <!-- Import our custom js files -->
        <script src="{{url_for('static', filename='translate.js')}}"></script>

        {% if is_admin %}
            <script src="{{url_for('static', filename='admin_control.js')}}"></script>
        {% endif %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand align-items-center" href="#">
                    <i class="bi bi-terminal fs-1 p-2"></i>
                    <span class="fs-3 ">Romain Fauquet / Sirfanas</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapseDiv" aria-controls="navbarCollapseDiv" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapseDiv">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/me">My career</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container-fluid bg-light">
            {% block content %}{% endblock %}
        </div>
    </body>
    <footer>
        <div class="dropdown">
            <button class="btn  dropdown-toggle" id="languageDropdown" type="button" data-bs-toggle="dropdown">
            </button>
            <ul id="languageDropdownOptions" class="dropdown-menu" aria-labelledby="languageDropdown">
            </ul>
        </div>
        {% if is_admin %}
        <button class="btn btn-primary" id="buttonToggleEdiTranslation" onclick="toggleEditTranslation()" confirm="test">
            Edit translation
        </button>
        <button class="btn btn-danger" id="applyTranslation" onclick="applyTranslation()" confirm="test">
                Apply translation
            </button>
        {% endif %}
    </footer>
</html>
